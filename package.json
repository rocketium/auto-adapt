{
	"name": "@rocketium/auto-adapt",
	"version": "2.0.1",
	"description": "Layout adaptation engine for auto-sizing canvas elements across different dimensions",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"lint": "eslint src/",
		"format": "prettier --write src/",
		"format:check": "prettier --check src/",
		"typecheck": "tsc --noEmit",
		"prepublishOnly": "npm run build",
		"publish:org": "npm publish --access public",
		"postpublish": "git push origin HEAD --tags",
		"release:patch": "npm version patch && npm publish",
		"release:minor": "npm version minor && npm publish",
		"release:major": "npm version major && npm publish"
	},
	"peerDependencies": {
		"@types/fabric": "^5.3.9"
	},
	"peerDependenciesMeta": {
		"@types/fabric": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/fabric": "^5.3.9",
		"@types/node": "^22.0.0",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^10.0.0",
		"prettier": "^3.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.5.0"
	},
	"engines": {
		"node": ">=20"
	},
	"keywords": [
		"layout",
		"auto-adapt",
		"canvas",
		"resize",
		"scaling",
		"rocketium"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/rocketium/auto-adapt"
	},
	"bugs": {
		"url": "https://github.com/rocketium/auto-adapt/issues"
	}
}
